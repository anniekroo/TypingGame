import sys, pygame, random
pygame.init()

size = width, height = 800, 600
black = 0, 0, 0
white = 255, 255, 255
myfont = pygame.font.SysFont('ubuntumono', 40)

screen = pygame.display.set_mode(size)


while True:
    waiting = True
    nextChar = random.randint(97, 122)
    screen.fill(black)
    text = myfont.render(chr(nextChar), 1, white)
    screen.blit(text, (100, 100))
    pygame.display.flip()
    while waiting:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                sys.exit()
            if event.type == pygame.KEYDOWN:
                keyPressed = event.key
                if keyPressed == nextChar:
                    print('X')
                    waiting = False
                else:
                    print('   X')
